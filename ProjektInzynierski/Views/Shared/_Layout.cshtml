<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Equipment Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: url('/images/background.png') no-repeat center center fixed;
            background-size: cover;
            color: #ffffff;
        }

        .navbar-dark {
            background-color: rgba(33, 37, 41, 0.8); 
        }

        .btn-yellow {
            background-color: #FFD700;
            color: #000000;
            border: none;
        }

            .btn-yellow:hover {
                background-color: #FFA500;
                color: #ffffff;
            }

        footer {
            background-color: rgba(33, 37, 41, 0.8);
            color: #ffffff;
            padding: 10px 0;
            position: fixed;
            bottom: 0;
            width: 100%;
            text-align: center;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-dark navbar-expand-lg">
        <div class="container-fluid">
            <a class="navbar-brand" href="/"> Home</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto d-flex align-items-center">
                    <li class="nav-item">
                        <a class="btn btn-primary" href="/Cart/Index">
                            <i class="bi bi-cart"></i> Koszyk
                        </a>
                    </li>
                    <li class="nav-item dropdown ms-2">
                        <a class="nav-link dropdown-toggle btn btn-secondary" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Menu
                        </a>
                        <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="/Equipments">Equipments</a></li>
                            <li><a class="dropdown-item" href="/Contact/Index">Contact</a></li>
                            <li><hr class="dropdown-divider"></li>
                            @if (User?.Identity != null && User.Identity.IsAuthenticated)
                            {
                                <li><a class="dropdown-item" href="/Users/Logout">Logout</a></li>
                            }
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>
    <footer>
        <footer>
            <style>
                footer {
                    background-color: rgba(33, 37, 41, 0.8);
                    color: #ffffff;
                    padding: 10px 0;
                    position: fixed;
                    bottom: 0;
                    width: 100%;
                    text-align: center;
                    z-index: 10; 
                }
            </style>
        </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        @RenderSection("Scripts", required: false)
</body>
</html>
