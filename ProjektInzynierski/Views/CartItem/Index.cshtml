@model List<ProjektInzynierski.Models.CartItem>

@{
    ViewData["Title"] = "Shopping Cart";
}

<h2>Your Shopping Cart</h2>

@if (Model.Count == 0)
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Item</th>
                <th>Price per Day</th>
                <th>Quantity</th>
                <th>Total Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.PricePerDay</td>
                    <td>@item.Quantity</td>
                    <td>@item.TotalPrice</td>
                    <td>
                        <a asp-action="RemoveFromCart" asp-route-equipmentId="@item.EquipmentID" class="btn btn-danger btn-sm">Remove</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
<a asp-action="Index" asp-controller="Equipments" class="btn btn-primary">Continue Shopping</a>
