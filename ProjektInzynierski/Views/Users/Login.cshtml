@model ProjektInzynierski.Application.Models.Users.UserLoginModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center mb-4">Login</h1>
<div class="container mt-5">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }
    <div class="container mt-5">
        <h2>Login</h2>
        <form asp-action="Login" method="post">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label for="UserEmail">Email</label>
                <input type="email" name="Username" class="form-control" id="UserEmail" required placeholder="Enter your email" />
            </div>
            <div class="form-group">
                <label for="Password">Password</label>
                <input type="password" name="Password" class="form-control" id="Password" required placeholder="Enter your password" />
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
        </form>
    </div>

<style>
    body {
        background-color: #000000;
        color: #ffffff;
    }
    .btn-yellow {
        background-color: #FFD700;
        color: #000000;
        border: none;
    }
    .btn-yellow:hover {
        background-color: #FFA500;
        color: #ffffff;
    }
    .card {
        background-color: rgba(33, 37, 41, 0.8);
        border: none;
    }
</style>
