@model IEnumerable<ProjektInzynierski.Infrastructure.Models.User>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Users List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    body::before {
        content: '';
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        z-index: -1;
    }
</style>
<h1 class="text-center mb-4">Users List</h1>
<div class="d-flex justify-content-between align-items-center mb-3">
    <p>Total Users: @Model.Count()</p>
    <a href="/Users/Register" class="btn btn-yellow">Add New User</a>
</div>
<table class="table table-hover table-bordered text-center">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.UserEmail</td>
                <td>@user.UserRole</td>
                <td>
                    <a href="/Users/Details/@user.Id" class="btn btn-yellow btn-sm">Details</a>
                    <a href="/Users/Edit/@user.Id" class="btn btn-yellow btn-sm mx-1">Edit</a>
                    <a href="/Users/Delete/@user.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    body {
        background-color: #000000;
        color: #ffffff;
    }
    .btn-yellow {
        background-color: #FFD700;
        color: #000000;
        border: none;
    }
    .btn-yellow:hover {
        background-color: #FFA500;
        color: #ffffff;
    }
    table {
        color: #ffffff;
    }
</style>
