@model ProjektInzynierski.Models.UserLoginModel

@{
    ViewData["Title"] = "Logowanie";
}

<h2>Logowanie użytkownika</h2>

@if (ViewBag.SuccessMessage != null)
{
    <div class="alert alert-success">@ViewBag.SuccessMessage</div>
}

<form asp-action="Login" asp-controller="Users" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label asp-for="Username">Nazwa użytkownika</label>
        <input asp-for="Username" class="form-control" required />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password">Hasło</label>
        <input asp-for="Password" class="form-control" type="password" required />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Zaloguj się</button>
</form>

<p class="mt-3">
    <a asp-action="Register" asp-controller="Users">Zarejestruj się</a>
</p>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
