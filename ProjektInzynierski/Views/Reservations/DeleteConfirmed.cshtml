@model ProjektInzynierski.Application.Models.Reservation.CreateReservationDto
@using ProjektInzynierski.Application.Models.Clients;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Delete Confrimation Reservation";

    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    body::before {
        content: '';
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        z-index: -1;
    }
</style>

<h2>Delete Reservation</h2>

<div class="alert alert-warning">
    <p>Are you sure you want to delete this reservation?</p>
</div>

<div>
    <h4>Reservation Details</h4>
    <dl class="row">
        <dt class="col-sm-2">Start Date</dt>
        <dd class="col-sm-10">@Model.StartDate.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">End Date</dt>
        <dd class="col-sm-10">@Model.EndDate.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">Total Days</dt>
        <dd class="col-sm-10">@((Model.EndDate - Model.StartDate).Days)</dd>

    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
