@model ProjektInzynierski.Application.Models.Reservation.CreateReservationDto

<h1>Edytuj rezerwację</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div>
        <label for="StartDate">Data rozpoczęcia</label>
        <input asp-for="StartDate" type="date" />
    </div>
    <div>
        <label for="EndDate">Data zakończenia</label>
        <input asp-for="EndDate" type="date" />
    </div>
    <div>
        <label for="Status">Status</label>
        <select asp-for="Status">
            <option value="Issued">Wydana</option>
            <option value="PaymentCompleted">Płatność zakończona</option>
            <option value="Completed">Zakończona</option>
            <option value="Cancelled">Anulowana</option>
            <option value="Rejected">Odrzucona</option>
        </select>
    </div>
    <button type="submit">Zapisz</button>
</form>

<a asp-action="Index">Powrót</a>
