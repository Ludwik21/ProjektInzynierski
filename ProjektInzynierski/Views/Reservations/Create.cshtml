@model ProjektInzynierski.Application.Models.Reservation.CreateReservationDto

<h1>Nowa rezerwacja</h1>

<form asp-action="Create">
    <div>
        <label for="ClientId">Klient</label>
        <select asp-for="ClientId">
            @foreach (var client in ViewBag.Clients)
            {
                <option value="@client.Id">@client.Name</option>
            }
        </select>
    </div>
    <div>
        <label for="StartDate">Data rozpoczęcia</label>
        <input asp-for="StartDate" type="date" />
    </div>
    <div>
        <label for="EndDate">Data zakończenia</label>
        <input asp-for="EndDate" type="date" />
    </div>
    <div>
        <label for="EquipmentIds">Sprzęt</label>
        <select asp-for="EquipmentIds" multiple>
            @foreach (var equipment in ViewBag.Equipments)
            {
                <option value="@equipment.Id">@equipment.Name</option>
            }
        </select>
    </div>
    <button type="submit">Utwórz</button>
</form>

<a asp-action="Index">Powrót</a>
