@model ProjektInzynierski.Application.Models.Equipment.CreateEquipmentDto

@{
    ViewData["Title"] = "Add Equipment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center mb-4">Add New Equipment</h1>
<form asp-action="Create" method="post" class="card p-4 shadow-sm">
    <div class="mb-3">
        <label for="Name" class="form-label">Name</label>
        <input type="text" class="form-control" id="Name" name="Name" required>
    </div>
    <div class="mb-3">
        <label for="Brand" class="form-label">Brand</label>
        <input type="text" class="form-control" id="Brand" name="Brand" required>
    </div>
    <div class="mb-3">
        <label for="PricePerDay" class="form-label">Price Per Day</label>
        <input type="number" class="form-control" id="PricePerDay" name="PricePerDay" step="0.01" required>
    </div>
    <div class="mb-3">
        <label for="PricePerDayCurrency" class="form-label">Currency</label>
        <select class="form-select" id="PricePerDayCurrency" name="PricePerDayCurrency">
            <option value="USD">USD</option>
            <option value="EUR">EUR</option>
            <option value="PLN">PLN</option>
        </select>
    </div>
    <div class="mb-3">
        <label for="IsAvailable" class="form-label">Available</label>
        <select class="form-select" id="IsAvailable" name="IsAvailable">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
    </div>
    <button type="submit" class="btn btn-yellow">Save</button>
</form>
