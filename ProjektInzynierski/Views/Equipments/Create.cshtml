@model CreateEquipmentDto

<h1>Dodaj nowy sprzęt</h1>

<form asp-action="Create">
    <div>
        <label for="Name">Nazwa</label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div>
        <label for="Category">Kategoria</label>
        <select asp-for="Category">
            <option value="Lens">Obiektyw</option>
            <option value="Camera">Kamera</option>
            <option value="Tripod">Statyw</option>
            <option value="Filters">Filtry</option>
            <option value="Light">Oświetlenie</option>
        </select>
        <span asp-validation-for="Category"></span>
    </div>
    <div>
        <label for="Brand">Marka</label>
        <input asp-for="Brand" />
        <span asp-validation-for="Brand"></span>
    </div>
    <div>
        <label for="Description">Opis</label>
        <textarea asp-for="Description"></textarea>
        <span asp-validation-for="Description"></span>
    </div>
    <div>
        <label for="PricePerDay">Cena za dzień</label>
        <input asp-for="PricePerDay" />
        <span asp-validation-for="PricePerDay"></span>
    </div>
    <div>
        <label for="PricePerDayCurrency">Waluta</label>
        <select asp-for="PricePerDayCurrency">
            <option value="PLN">PLN</option>
            <option value="USD">USD</option>
        </select>
        <span asp-validation-for="PricePerDayCurrency"></span>
    </div>
    <button type="submit">Dodaj</button>
</form>

<a href="@Url.Action("Index", "Equipments")">Powrót</a>
