@model IEnumerable<ProjektInzynierski.Models.Equipments>

@{
    ViewData["Title"] = "Select Equipment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center my-4">Sprzęt z kategorii @ViewData["Category"]</h2>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">Cena: @item.PricePerDay PLN/dzień</p>
                        <p class="card-text">@item.Description</p>
                        <p class="card-text">
                            Dostępność:
                            <strong class="@(item.AvailabilityStatus ? "text-success" : "text-danger")">
                                @(item.AvailabilityStatus ? "Dostępny" : "Niedostępny")
                            </strong>
                        </p>
                        <form asp-action="AddToCart" asp-controller="CartItem" method="post" class="add-to-cart-form">
                            <input type="hidden" name="equipmentId" value="@item.EquipmentID" />
                            <button type="submit" class="btn btn-primary">Dodaj do koszyka</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script>
    $(document).ready(function () {
        $('.add-to-cart-form').on('submit', function (e) {
            e.preventDefault();

            $.ajax({
                url: '/CartItem/AddToCart',
                type: 'POST',
                data: $(this).serialize(),
                success: function () {
                    alert("Dodano do koszyka!");
                },
                error: function () {
                    alert("Wystąpił błąd przy dodawaniu do koszyka.");
                }
            });
        });
    });
</script>
