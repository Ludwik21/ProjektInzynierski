@model IEnumerable<ProjektInzynierski.Models.Equipment>

@{
    ViewData["Title"] = "Select Equipment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center my-4">Sprzęt z kategorii @ViewData["Category"]</h2>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">Cena: @item.PricePerDay PLN/dzień</p>
                        <p class="card-text">@item.Description</p>
                        <p class="card-text">
                            Dostępność:
                            <strong class="@(item.AvailabilityStatus ? "text-success" : "text-danger")">
                                @(item.AvailabilityStatus ? "Dostępny" : "Niedostępny")
                            </strong>
                        </p>
                        <a href="@Url.Action("Reserve", "Equipments", new { id = item.EquipmentID })"
                           class="btn btn-primary @(item.AvailabilityStatus ? "" : "disabled")">
                            Zarezerwuj
                        </a>
                        <a asp-action="AddToCart" asp-controller="Cart" asp-route-equipmentId="@item.EquipmentID" asp-route-name="@item.Name" asp-route-pricePerDay="@item.PricePerDay" class="btn btn-primary">Dodaj do koszyka</a>

                    </div>
                </div>
            </div>
        }
    </div>
</div>
